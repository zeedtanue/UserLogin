extends layout

block content
	.container
		ul.errors
			if errors
				each error, i in errors
					li.alert.alert-danger #{error.msg}
		form(method='post', action='/users/update', )
			h1	Update Info
			p 	Please Update using the form below
			.form-group
				label(for='name') First Name:
				input.form-control(type='text', placeholder='Enter First Name' name='name')
			.form-group
				label(for='lastname') Last Name:
				input.form-control(type='text', placeholder='Enter Last Name' name='lastname')

		
			br
			button.btn.btn-primary(type='submit') Update
							